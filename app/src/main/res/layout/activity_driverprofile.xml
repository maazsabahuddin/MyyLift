<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Driverprofile">


    <TextView
        android:id="@+id/headerdrivprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile Info"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginTop="28dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    </TextView>



    <TextView
        android:id="@+id/namedriver"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    </TextView>

    <TextView
        android:id="@+id/emaildriver"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    </TextView>

    <TextView
        android:id="@+id/phonedriver"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    </TextView>

    <TextView
        android:id="@+id/cnicdriver"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    </TextView>


    <TextView
        android:id="@+id/carnoplt"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    </TextView>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Ride"
        android:id="@+id/cuslastridebutton"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

    </Button>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">

        <ImageButton
            android:id="@+id/homebtn4"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@android:color/black"
            android:layout_marginTop="256dp"
            android:src="@drawable/ic_home_name"

            />

        <ImageButton
            android:id="@+id/profilebtn4"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@android:color/black"
            android:layout_marginTop="256dp"
            android:src="@drawable/ic_profie_name"

            />
        <ImageButton
            android:id="@+id/logoutbtn4"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@android:color/black"
            android:layout_marginTop="256dp"
            android:src="@drawable/ic_logout_name"

            />
    </LinearLayout>



</LinearLayout>