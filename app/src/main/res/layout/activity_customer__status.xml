<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Customer_Status">






    <TextView
        android:id="@+id/headercusstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        >

    </TextView>

    <TextView
        android:id="@+id/pendingorapprove"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:id="@+id/cusendbtn"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="90dp">
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">

        <ImageButton
            android:id="@+id/homebtn2"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@android:color/black"
            android:layout_marginTop="305dp"
            android:src="@drawable/ic_home_name"

            />

        <ImageButton
            android:id="@+id/profilebtn2"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@android:color/black"
            android:layout_marginTop="305dp"
            android:src="@drawable/ic_profie_name"

            />
        <ImageButton
            android:id="@+id/logoutbtn2"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@android:color/black"
            android:layout_marginTop="305dp"
            android:src="@drawable/ic_logout_name"

            />

    </LinearLayout>


</LinearLayout>